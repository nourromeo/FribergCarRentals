@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Booking's List";
    var adminName = HttpContextAccessor.HttpContext.Session.GetString("AdminName");
    var customerName = HttpContextAccessor.HttpContext.Session.GetString("CustomerName");
}

<h1>Booking's List</h1>

@if (adminName != null || customerName != null)
{
    <p>
        <a asp-action="Create">Create New Booking</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>Starting from</th>
            <th>Ending in</th>
            <th>Customer</th>
            <th>Car</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StartDate</td>
                <td>@item.EndDate</td>
                <td>@($"{item.Customer.FirstName} {item.Customer.LastName}")</td>
                <td>@($"{item.Car.Brand} {item.Car.Model}")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
